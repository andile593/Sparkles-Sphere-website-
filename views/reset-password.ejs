

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/headInfo') %>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="form-cover">
      <form id="resetPasswordForm">
        <h2>Reset Password</h2>
        <label for="newPassword">New Password</label>
        <input type="password" name="newPassword" required />
        <div class="new-password error"></div>
        <input type="hidden" name="token" value="<%= token %>" />
        <button class="form-btn">Reset Password</button>
      </form>
    </div>

    <script>
      const form = document.querySelector("#resetPasswordForm");
      const newPasswordError = document.querySelector(".new-password.error");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // reset errors
        newPasswordError.textContent = "";

        // get values
        const newPassword = form.newPassword.value;
        const token = form.token.value;

        try {
          const res = await fetch(`/reset-password/${token}`, {
            method: "POST",
            body: JSON.stringify({ token, newPassword }),
            headers: { "Content-Type": "application/json" },
          });
          const data = await res.json();

          if (data.error) {
            newPasswordError.textContent = data.error;
          } else {
            // Redirect to login page or display a success message
            console.log(data);
          }
        } catch (err) {
          console.log(err);
        }
      });
    </script>

    <%- include('./partials/footer') %>
  </body>
  <script src="../js/part.js"></script>
</html>
